<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/successDialogIv"
            android:layout_width="@dimen/all_height_150dp"
            android:layout_height="@dimen/all_height_150dp"
            android:layout_marginTop="@dimen/all_margin_16dp"
            app:srcCompat="@drawable/drink_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/successDialogTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_margin_16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/baskerville_light"
            android:textSize="@dimen/all_font_18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/all_drink_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/successDialogIv" />

    <View
            android:id="@+id/topView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/all_height_1dp"
            android:layout_marginTop="@dimen/all_margin_8dp"
            android:background="@color/dividerColor"
            app:layout_constraintEnd_toEndOf="@+id/successDialogTv"
            app:layout_constraintStart_toStartOf="@+id/successDialogTv"
            app:layout_constraintTop_toBottomOf="@+id/successDialogTv" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/successDialogBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin_8dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/all_ok"
            android:textSize="@dimen/all_font_20sp"
            android:fontFamily="@font/baskerville_bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topView" />

    <View
            android:id="@+id/bottomView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/all_height_1dp"
            android:layout_marginTop="@dimen/all_margin_8dp"
            android:layout_marginBottom="@dimen/all_margin_8dp"
            android:background="@color/dividerColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/successDialogBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>